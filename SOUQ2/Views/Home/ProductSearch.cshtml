
    <section id="products" class="products section">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Products</h2>
                <p>All products under selected category.</p>
            </div>

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item cat-@item?.Cat?.Id">
                        <div class="portfolio-content h-100">
                            <a href="@Url.Content("~/assets/img/portfolio/" + @item.Image)" data-gallery="portfolio-gallery-app" class="glightbox">
                                <img src="@Url.Content("~/assets/img/portfolio/" + @item.Image)" class="img-fluid" alt="@item.Name" />
                            </a>
                            <div class="portfolio-info">
                                <h4>
                                    <a href="@Url.Action("ProductDetails", "Home", new { id = item.Id })" title="More Details">@item.Name</a>
                                </h4>
                                <p>@item.Description</p>
                                <p><strong>Price:</strong> @item.Price EGP</p>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section>

    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/js/main.js"></script>


